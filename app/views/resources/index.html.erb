<p style="color: green"><%= notice %></p>

<h2>Ресурсы</h2>

<table>
  <thead>
    <tr>
      <th>Название ресурса</th>
      <th>Идентификатор</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @resources.each do |resource|%>
     <tr>
      <td><%= link_to resource.name, resource %></td>
      <td><%= resource.indentificator %></td>
      <td class="left">
        <ul>
          <%= link_to "Редактировать", edit_resource_path(resource), class: 'btn1' %>
          <%= button_to "Удалить", resource_path(resource), method: :delete, class: 'btn2' %>
        </ul>
      </td>
     </tr>
    <% end -%>
  </tbody>
</table>

<hr>

<%= link_to "Добавить ресурс", new_resource_path, class: 'btn' %>
