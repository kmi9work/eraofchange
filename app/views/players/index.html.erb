<p style="color: green"><%= notice %></p>

<h1>Игроки</h1>
  <table class="table">
    <thead>
        <th scope="col"><%= link_to "Создать нового игрока", new_player_path %></th>
    </thead>
  </table>

<div id="players">

  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Имя</th>
        <th scope="col">Редактировать</th>
        <th scope="col">Удалить</th>
      </tr>
   </thead>


    <% @players.each do |player| %>
      <% link_to_edit = "/players/#{player.id}/edit"%>

      <tbody>
        <tr>
          <th scope="row"><%= player.id %></th>
          <td><%= link_to player.name, player  %> </td>
          <td><%= link_to "Редактировать игрока", link_to_edit %></td>
          <td><%= button_to "Удалить игрока", player_path(player), 
                  method: :delete %></td>
          </tr>
      </tbody>
    <% end %>
  </table>
</div>


