<h2>Населенные пункты</h2>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Категория</th>
      <th>Действие</th>
    </tr>
  </thead>
  <tbody>
    <% @settlements.each do |settlement| %>
      <% link = "/settlements/#{settlement.id}" %>
      <tr>
        <td><%= link_to settlement.name, link %></td>
        <td>
          <% if settlement.category == 'town' %>
            <b><%= settlement.category %></b>
          <% else %>
            <%= settlement.category %>
          <% end -%>
        </td>
        <td class="left">
          <ul>
            <li><%= link_to 'Редактировать', edit_settlement_path(settlement) %></li>
            <li><%= button_to 'Удалить', settlement_path(settlement), method: :delete %></li>
          </ul>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>

<hr>

<p>
  <%= link_to 'Создать населенный пункт', new_settlement_path %>
</p> <br>

<p>
  <%= link_to 'Перейти к экономическим субъектам', economic_subjects_path %>
</p>
