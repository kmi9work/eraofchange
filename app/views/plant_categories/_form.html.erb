<%= form_with(model: plant_category) do |form| %>
  <% if plant_category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(plant_category.errors.count, "error") %> prohibited this plant_category from being saved:</h2>

      <ul>
        <% plant_category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <p>Название категории: <%= form.text_field :name %></p>

    <p>Типы предприятий: <%= form.select :plant_type_ids, options_for_select(PlantType.all.collect{ |pt| [pt.name, pt.id] }, plant_category.plant_type_ids), {include_blank: true}, {multiple: true, class: 'form-select', style: "width: 200px"} %></p>

    <p>Места для предприятий: <%= form.select :plant_place_ids, options_for_select(PlantPlace.all.collect{ |pp| [pp.name, pp.id] }, plant_category.plant_place_ids), {include_blank: true}, {multiple: true, class: 'form-select', style: "width: 200px"} %></p>

    <%= form.submit('Отправить') %>
  </div>
<% end %>
