<p style="color: green"><%= notice %></p>

<h1>Должности</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Имя</th>
      <th scope="col">Действия</th>
    </tr>
  </thead>
  <tbody>
  <% @jobs.each do |job| %>
    <tr>
    <td scope="row"><%= job.id %></td>
    <td><%= link_to job.name, job_path(job) %></td>
    <td>
      <%= link_to "Редактировать человека", edit_job_path(job), class: 'btn1' %>
      <%= button_to "Удалить человека", job_path(job), method: :delete, class: 'btn2', id: "delete"%>
    </td>
  <% end %>
</div>

<%= link_to "Создать новую должность", new_job_path %>

