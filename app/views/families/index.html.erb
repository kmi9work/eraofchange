<p style="color: green"><%= notice %></p>

<h2>Семьи</h2>
  
<table>
  <thead>
    <tr>
      <th>Фамилии семей</th>
      <th>Игровые персонажи в семье</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @families.each do |family| %>
     <tr>
      <td><%= link_to family.name, family %></td>
      <td>
        <% if family.player_ids.blank? %>
         Не выбраны
        <% else %>
          <% family.players.each do |player|%>
          <%= link_to player.name, player %>
         <% end -%>
        <% end -%>
      </td>
      <td class="left">
        <ul>
          <%= link_to "Редактировать семью", edit_family_path(family), class: 'btn1' %>
          <%= button_to "Удалить семью", family_path(family), method: :delete, class: 'btn2' %>
        </ul>
      </td>
     </tr>
    <% end -%> 
  </tbody>
</table>

<hr>

<%= link_to "Создать новую семью", new_family_path, class: 'btn' %>
