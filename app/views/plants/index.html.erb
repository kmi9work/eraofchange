<h1>Предприятия</h1>



<table>
  <thead>
    <tr>
      <th>№</th>
      <th>Предприятие</th>
      <th>Категория</th>
      <th>Цена</th>
      <th>Уровень</th>
      <th>Населенный пункт</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @plants.each do |plant| %>
     <% link = "/plants/#{plant.id}" %>
     <tr>
      <td><%= plant.id %></td>
          <% if plant.economic_subject_type == "Guild" %>
          <% proprietor = "гильдии" %>
          <% else %>
          <% proprietor = "купца" %>
          <% end  %>
      <td>
        <% name_of_plant = "#{plant.plant_type&.name}" + " #{proprietor}" + " #{plant.economic_subject&.name}" %> 
          <%= link_to name_of_plant, link %>
      </td>
      <td><%= plant.plant_category&.name %> </td>
      <td><%#= plant.price %></td>
      <td><%= plant.level %></td>
      <td> <% if plant.settlement.blank? %>
         Не выбран (сделать partial)
        <% else %>
         <% link_to_settlement = "/settlements/#{plant.settlement.id}" %>
         <%= link_to plant.settlement&.name, link_to_settlement %>
        <% end -%>
      </td>
      <td class="left">
        <ul>
          <%= link_to 'Редактировать', edit_plant_path(plant), class: 'btn1'%>
          <%= button_to 'Удалить', destroy_plant_path(plant), method: :delete, class: 'btn2'%>
        </ul>
      </td>
     </tr>
    <% end -%>  
  </body>
</table>

<hr>

<%= link_to "Добавить предприятие", new_plant_path, class: 'btn' %>
