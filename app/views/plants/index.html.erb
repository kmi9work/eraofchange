<p style="color: green"><%= notice %></p>

<h2>Предприятия</h2>

<table>
  <thead>
    <tr>
      <th>№</th>
      <th>Предприятие</th>
      <th>Категория</th>
      <th>Цена</th>
      <th>Уровень</th>
      <th>Населенный пункт</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @plants.each do |plant| %>
     <% link = "/plants/#{plant.id}" %>
     <tr>
      <td><%= plant.id %></th>
      <td><%= link_to plant.name, link %></td>
      <td><%= plant.category %> </td>
      <td><%= plant.price %></td>
      <td><%= plant.level %></td>
      <td>
        <% if plant.settlement == nil %>
         Не выбран
        <% else %>
         <%= link_to plant.settlement&.name, link %>
        <% end -%>
      </td>
      <td class="left">
        <ul>
          <%= link_to 'Редактировать', edit_plant_path(plant), class: 'btn1'%>
          <%= button_to 'Удалить', destroy_plant_path(plant), method: :delete, class: 'btn2'%>
        </ul>
      </td>
     </tr>
    <% end -%>  
  </body>
</table>

<hr>

<%= link_to "Добавить предприятие", new_plant_path, class: 'btn' %>
