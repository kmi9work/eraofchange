<p style="color: green"><%= notice %></p>

<h1>Регионы</h1>
<%= link_to "Создать новый регион", new_region_path, class: 'btn' %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Регион</th>
      <th scope="col">Параметры</th>
      <th scope="col">Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td scope="row"><%= region.id %></td>
        <td><%= link_to region.name, region_path(region) %></td>
        <td>Параметры</td>
        <td>
          <%= link_to "Редактировать регион", edit_region_path(region), class: 'btn1' %>
          <%= button_to "Удалить регион", region_path(region), method: :delete, class: 'btn2', id: "delete-#{region.id}" %>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>

<hr>
