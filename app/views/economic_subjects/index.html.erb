<style type="text/css">
  
  .btn{
   background-color: #729894;
    color: white;
    padding: 10px 15px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 14px;
    float: left;
    border: 2px solid;
  }

  .btn1, .btn2{
    background-color: #93a5a7;
    color: white;
    padding: 10px 25px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    float: left;
    border: 1px solid;
    font-size: 12px;
  }

  .btn:hover{
    background-color:#b3c3c5;
  }

  .btn1:hover{
    background-color:#a4bab1;
  }

  .btn2:hover{
    background-color:#d28e87;
  }

</style>


<h2>Экономические субъекты (EconomicSubjects)</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Название</th>
      <th>Категория</th>
      <th>Количество денег</th>
      <th>Действие</th>
    </tr>
  </thead>
  <tbody>
    <% @economic_subjects.each do |economic_subject| %>
    <% link = "/economic_subjects/#{economic_subject.id}" %>
      <tr>
        <td><%= link_to economic_subject.name, link %></td>
        <td><%= economic_subject.category %></td>
        <td><%= economic_subject.money %></td>
        <td>
          <%= link_to 'Редактировать', edit_economic_subject_path(economic_subject), class: 'btn1' %>
          <%= button_to 'Удалить', economic_subject_path(economic_subject), method: :delete, class: 'btn2', id: "delete-#{economic_subject}" %>
        </td>
      </tr>
    <% end -%>  
  </tbody>
</table>

<br><hr><br>

<p><%= link_to 'Создать экономический субъект', new_economic_subject_path %></p>

<p>
  <%= link_to "Перейти к населенным пунктам", settlements_path, class: 'btn' %>
  <%= link_to "Перейти к предприятиям", plants_path, class: 'btn'  %>
</p>



