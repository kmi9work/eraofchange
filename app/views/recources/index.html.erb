<p style="color: green"><%= notice %></p>

<h2>Ресурсы</h2>

<table>
  <thead>
    <tr>
      <th>Название ресурса</th>
      <th>Стоимость</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @recources.each do |recource|%>
     <% link = "/recources/#{recource.id}"%>
     <tr>
      <td><%= link_to recource.name, recource %></td>
      <td><%= recource.price %></td>
      <td class="left">
        <ul>
          <%= link_to "Редактировать", edit_recource_path(recource), class: 'btn1' %>
          <%= button_to "Удалить", recource_path(recource), method: :delete, class: 'btn2' %>
        </ul>
      </td>
     </tr>
    <% end -%>
  </tbody>
</table>

<hr>

<%= link_to "Добавить ресурс", new_recource_path, class: 'btn' %>
