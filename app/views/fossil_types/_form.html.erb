<%= form_with(model: fossil_type) do |form| %>
  <% if fossil_type.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(fossil_type.errors.count, "error") %> prohibited this fossil_type from being saved:</h2>

      <ul>
        <% fossil_type.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    Типы предприятий: <%= form.select :plant_type_ids, options_for_select(PlantType.all.collect{ |pt| [pt.name, pt.id] }, fossil_type.plant_type_ids), {include_blank: true}, {multiple: true, class: 'form-select', style: "width: 200px"} %>
  </div>

  <div>
    Места для предприятияй: <%= form.select :plant_place_ids, options_for_select(PlantPlace.all.collect{ |pp| [pp.title, pp.id] }, fossil_type.plant_place_ids), {include_blank: true}, {multiple: true, class: 'form-select', style: "width: 200px"} %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
