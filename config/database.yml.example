default: &default
  adapter: postgresql
  encoding: unicode
  host: localhost
  username: postgres
  password:
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>

development:
  <<: *default
  database: eraofchange_development

test:
  <<: *default
  database: eraofchange_test

production:
  <<: *default
  database: eraofchange_production
  username: deploy
  password: <%= ENV["ERAOFCHANGE_DATABASE_PASSWORD"] %>

